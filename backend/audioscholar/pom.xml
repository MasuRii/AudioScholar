		</dependency>

		<dependency>
			<groupId>com.convertapi.client</groupId>
			<artifactId>convertapi</artifactId>
			<version>2.12</version>
		</dependency>

		<!-- Lombok dependency for code generation and Spotless formatter compatibility -->
		<dependency>
		          <groupId>org.projectlombok</groupId>
		          <artifactId>lombok</artifactId>
		          <scope>compile</scope>
		      </dependency>

		<!-- Dotenv for .env file support -->
		<dependency>
			<groupId>io.github.cdimascio</groupId>
			<artifactId>dotenv-java</artifactId>
			<version>2.3.0</version>
		</dependency>

		<!-- Configuration metadata processor for IDE support -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-configuration-processor</artifactId>
			<optional>true</optional>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<jvmArguments>
						--enable-native-access=ALL-UNNAMED
					</jvmArguments>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.owasp</groupId>
				<artifactId>dependency-check-maven</artifactId>
				<version>${dependency-check-maven.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<format>HTML</format>
					<nvdApiKey>${env.NVD_API_KEY}</nvdApiKey>
				</configuration>
			</plugin>

			<plugin>
				<groupId>com.diffplug.spotless</groupId>
				<artifactId>spotless-maven-plugin</artifactId>
				<version>2.46.1</version>
				<configuration>
					<java>
						<!-- Import ordering -->
						<importOrder>
							<order>java,javax,org,com</order>
						</importOrder>
						
						<!-- Remove unused imports -->
						<removeUnusedImports/>
						
						<!-- Trim trailing whitespace -->
						<trimTrailingWhitespace/>
						
						<!-- End files with newline -->
						<endWithNewline/>
						
						<!-- Format with Eclipse JDT without complex configuration -->
						<eclipse>
							<version>4.35</version>
						</eclipse>
					</java>
					
					<!-- Force LF line endings -->
					<lineEndings>UNIX</lineEndings>
				</configuration>
				
				<executions>
					<!-- Format during compile phase (before spring-boot:run) -->
					<execution>
						<id>format</id>
						<goals>
							<goal>apply</goal>
						</goals>
						<phase>compile</phase>
					</execution>
					
					<!-- Validate during verify phase (for CI/CD) -->
					<execution>
						<id>check</id>
						<goals>
							<goal>check</goal>
						</goals>
						<phase>verify</phase>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>