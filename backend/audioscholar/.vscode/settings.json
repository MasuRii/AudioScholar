{
  // Disable VS Code's default Java formatter (Red Hat) for this workspace
  "[java]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  // Recommend using the Spotless extension for IDE formatting
  "java.format.settings.url": "eclipse-formatter.xml",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "postman.settings.dotenv-detection-notification-visibility": false,
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx4G -Xms100m -Xlog:disable --enable-native-access=ALL-UNNAMED"
}
