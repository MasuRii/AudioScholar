{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "spotless:apply (Pre-Launch Format)",
            "type": "shell",
            "windows": {
                "command": ".\\mvnw.cmd"
            },
            "linux": {
                "command": "./mvnw"
            },
            "osx": {
                "command": "./mvnw"
            },
            "args": ["spotless:apply"],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}